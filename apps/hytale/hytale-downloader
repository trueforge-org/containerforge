#!/usr/bin/env bash
set -euo pipefail

TMP_DIR="$(mktemp -d)"
trap 'rm -rf "$TMP_DIR"' EXIT

curl -fL https://downloader.hytale.com/hytale-downloader.zip -o "$TMP_DIR/hytale.zip"
unzip -q "$TMP_DIR/hytale.zip" -d "$TMP_DIR"
chmod +x "$TMP_DIR/hytale-downloader-linux-amd64"
exec "$TMP_DIR/hytale-downloader-linux-amd64" "$@"
